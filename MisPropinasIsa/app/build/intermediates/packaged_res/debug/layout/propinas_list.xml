<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/recycler"
    android:orientation="vertical"
    android:layout_marginTop="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Fecha: 12/12/2020 12:12:00"
            android:textColor="@color/text"
            android:textSize="13dp"
            android:fontFamily="@font/montserrat"
            android:id="@+id/tvFecha"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="Liberia y variedades Divino NiÃ±o"
            android:textColor="@color/text"
            android:textSize="15dp"
            android:textStyle="bold"
            android:fontFamily="@font/montserrat"
            android:id="@+id/tvComercio"
            app:layout_constraintTop_toBottomOf="@id/tvFecha"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="5dp"/>

        <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="Monto: 1000"
            android:textColor="@color/text"
            android:textSize="13dp"
            android:fontFamily="@font/montserrat"
            android:id="@+id/tvMonto"
            app:layout_constraintTop_toBottomOf="@id/tvComercio"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/guideline"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="5dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="Propina: 20%"
            android:textColor="@color/text"
            android:textSize="13dp"
            android:fontFamily="@font/montserrat"
            android:id="@+id/tvDescuento"
            app:layout_constraintTop_toBottomOf="@id/tvComercio"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/guideline"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="5dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="Total Prop: 120"
            android:textColor="@color/text"
            android:textSize="13dp"
            android:fontFamily="@font/montserrat"
            android:id="@+id/tvTotalDesc"
            app:layout_constraintTop_toBottomOf="@id/tvMonto"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/guideline"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="5dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="Total: 1200"
            android:textColor="@color/text"
            android:textSize="13dp"
            android:fontFamily="@font/montserrat"
            android:id="@+id/tvTotal"
            app:layout_constraintTop_toBottomOf="@id/tvMonto"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/guideline"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="5dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="Moneda: Codobas NIO"
            android:textColor="@color/text"
            android:textSize="15dp"
            android:fontFamily="@font/montserrat"
            android:id="@+id/tvMoneda"
            app:layout_constraintTop_toBottomOf="@id/tvTotal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="10dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>